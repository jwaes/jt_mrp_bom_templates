<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <record id="product_template_form_view_bom_button" model="ir.ui.view">
  <field name="name">product.template.bom.template</field>
  <field name="model">product.template</field>
  <field name="inherit_id" ref="product.product_template_only_form_view"/>
  <field name="arch" type="xml">
   <div name="button_box" position="inside">
    <button class="oe_stat_button bg-info" icon="fa-flask" invisible="bom_template_count == 0" name="action_template_bom" type="object">
     <field name="bom_template_count" string="BoM Templates" widget="statinfo"/>
    </button>
   </div></field>
 </record>
</odoo>